//variables de colores
blanco = #fff
fondo_principal = #ededed
gris_oscuro = #444
gris_medio = #88a
gris_claro = #B4B49A
azul = #90bbf1
azul_oscuro = #10738E
facebook = #4862A3
twitter = #55ACEE
googleplus = #DF5138
menu = #25B9D5
menu_claro = rgba(37, 185, 213, .1) 
amarillo = #F7D443
naranja = #E05421

@font-face {
	font-family: 'icomoon';
	src:url('../fonts/icomoon.eot?s4mwfv');
	src:url('../fonts/icomoon.eot?#iefixs4mwfv') format('embedded-opentype'),
		url('../fonts/icomoon.woff?s4mwfv') format('woff'),
		url('../fonts/icomoon.ttf?s4mwfv') format('truetype'),
		url('../fonts/icomoon.svg?s4mwfv#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

body
	background-color fondo_principal
	color #fff
	font-family arial
	font-size 16px

header
	background-color #2D3538
	box-shadow 0px 4px 2px 0px gris_claro
	height 75px
	padding .5em
	position relative

	.logo
		img
			border 2px solid white
			border-radius 15%
			width 70px

	.titular
		margin 0 75px 0 45px
		margin-top 8px
		.titulo
			color googleplus
			font-size 15px
			font-weight normal
			margin 0
			padding 0
			text-align center
			transition all 0.5s
		.subtitulo
			color gris_claro
			display block
			font-size 13px
			margin 0
			padding 0
			text-align center	
			transition all 0.5s		

	.usuario
		position absolute
		right 8px
		top 0px
		.avatar
			margin-right 1.6em
			img
				//border 2px solid red
				box-shadow 0px 0px 0px 2px white
				border-radius 50%
				position relative
				width 60px
				z-index 3
					
		.menu
			background-color menu
			border-radius 0 5px 5px 0
			color white
			cursor pointer
			display block
			height 20px
			padding 6px 5px 1px 6px
			position absolute
			right 0
			text-align right
			text-decoration none
			top 34px
			width 16px
			z-index 2
			&:before
				content "\e600"
				font-family 'icomoon'
				font-weight bold

			&:hover
				.menu_expan
					transition all .5s
					background white
					border-radius 10px 0 10px 10px
					border-left 2px solid gris_medio
					border-bottom 2px solid gris_medio
					border-right 2px solid gris_medio
					border-top 1px solid gris_medio
					height 300px
					opacity 1
					position absolute
					right 0px
					visibility visible
					width 280px
					z-index 2

				
		.menu_expan
			transition all .5s
			background menu
			border-radius 5px 0 5px 5px
			height 0px
			opacity 0
			padding 5px
			position absolute
			right 0px
			top 22px
			visibility hidden
			width 200px
			z-index 2
			.espacio_menu1
			.espacio_menu2
			.espacio_menu3
				display block
			.espacio_menu1
				height 38%
			.espacio_menu2
				height 37%
			.espacio_menu3
				height 25%

			.titulo_menu_expan
				color naranja
				font-size 15px
				font-weight normal
				text-align left
			hr
				border 1px solid gris_claro
				margin 4px 0 0px 0
				opacity .5
				padding 0
 
			.items
				border 1px solid naranja
				border-radius 4px
				color gris_oscuro
				display block
				float left
				font-weight normal
				font-size 15px
				margin 10px 0 0 0
				padding 5px
				text-align left
				text-decoration none
				width 45%
				&:nth-child(even)
					float right
				&:hover
					background naranja
					color white
				&:before
					content "\e601  "
					font-family "icomoon"
					font-size 13px
					-webkit-font-smoothing: antialiased;
					-moz-osx-font-smoothing: grayscale;

.left
	float left

.right
	float right

.presentacion
	background menu
	height 100%
	margin-top 15px
	margin-bottom 15px
	padding 20px 20px 10px 20px	
	text-align center
	h3
		font-weight normal
		font-size 22px
		margin 0
		padding 0
	h4
		font-weight normal
		font-size 15px
		margin 0 0 5px 0
		opacity .7
		padding 2px


.presentacionSignup
	background menu
	border-right 3px solid azul_oscuro
	float left
	height 100%
	margin 15px 2% 20px 0
	padding 2%
	text-align right
	transition all 0.5s
	width 30%
	
	h3
		font-weight normal
		font-size 22px
		margin 0
		padding 0
	h4
		font-weight normal
		font-size 15px
		margin 5px 0 20px 0
		opacity .7
		padding 2px

.formSignup
	background blanco
	border-radius 5px 0 0 5px
	color gris_oscuro
	float right
	margin 15px 0 20px 0
	padding 0
	transition all 0.5s
	width 62%

.crearCuenta
	background googleplus
	border-radius 5px 0 0 0
	color blanco
	display block
	margin-bottom 5px
	padding 3% 
	text-align center
	width 94%

.forgot-password
	a
		color naranja
		margin-left 2%
		text-decoration none
		&:hover
			text-decoration underline

.msjCorrecto
	background #58A756
	border-radius 5px
	color black
	margin-top 20px
	margin-left 5%
	margin-right 5%
	padding 15px
	text-align center
	a	
		text-shadow 0px 0px 5px blanco		
		color naranja
		font-size 20px
		text-decoration none
		&:hover
			text-shadow 0px 0px 5px amarillo		
			
#id_mugshot
.helptext
	color #676767;
	display block
	font-size 11px
	margin-left 2%


.btnRegistroEntidad
.btnIngresar
	background blanco
	border-radius 15px;
	color gris_oscuro
	display inline-block
	margin-top 5px
	padding 10px
	text-decoration none
	transition all .2s
	width 200px
	&:hover
		background naranja
		color blanco

.formRegistroEntidad2
	background blanco
	border-radius 5px
	box-shadow 0px 0px 10px gris_claro
	color gris_oscuro
	margin 0 5%
	padding 0px
	text-align center
	column-count 1
	-moz-column-count 1
	-webkit-column-count 1

.errorlist
	background googleplus
	border-radius 5px
	border-bottom 4px solid gris_oscuro
	color blanco
	list-style none
	margin 0 2% 0 2%
	padding 2px

label
	float left
	margin 0 2% 0 2% 

#profile-nav
	list-style none
	margin 0
	padding 0
	li
		margin 12px 0 12px 0
		padding 4px 2px 4px 2px
		width 100%
		a
			color blanco
			text-decoration none
			&:hover
				text-decoration underline

#details
	padding 5px
	text-align center
	img
		border 4px solid blanco
		box-shadow 0px 0px 1px 1px gris_medio
		border-radius 15%
		width 85px

.account_list
	padding 0 5% 0 5%
	margin 0	

	a
		div
			background gris_claro
			border-radius 5px
			float left
			height 200px
			margin 2%
			padding 0
			text-align center
			transition all .5s
			width 46%
			hr
				opacity .2

			img
				border 4px solid blanco
				box-shadow 0px 0px 1px 1px gris_medio
				border-radius 10px
				margin-top 10px
				width 90px
			
		&:hover
			div
				background blanco

.account_list2
	padding 0 5% 0 5%
	margin 0	

	a
		div
			background gris_claro
			border-radius 5px
			float left
			height 105px
			margin 2%
			padding 2% 0 0 0
			text-align center
			transition all .5s
			width 46%
			hr
				opacity .2

			img
				border 4px solid blanco
				box-shadow 0px 0px 1px 1px gris_medio
				border-radius 10px
				margin-top 10px
				width 90px
			
		&:hover
			div
				background blanco


.texto_propiedades1
	color black
	font-size .9em
	font-weight bold
	margin 0
	padding 0
	text-align center

.texto_propiedades2
	color gris_oscuro
	font-size .9em
	font-weight normal
	margin 0
	padding 0
	text-align center
	&:before
		content '( '
	&:after
		content ' )'

.texto_propiedades3
	color gris_oscuro
	font-size .7em
	font-weight normal
	margin 0
	padding 0
	text-align center
	

// para mensajes
.message
	margin 0 2% 0 2%
	width 94%

#messages
	margin 0
	padding 0

	li
		
		border-radius 5px
		border-bottom 1px solid #bbb
		border-top 1px solid #bbb
		height 70px
		list-style none
		padding 5px 5px 4px 5px
		margin-bottom 15px
		
		.avatar
			border-radius 5px
			margin -5px 8px 5px -4px
			width 50px
			float left
		.nNotificaciones
			color red
			font-size 14px
			float right
		p 
			color gris_oscuro
			font-size 13px
			margin 0
			padding 0 0 0 55px
			text-align justify
		a 
			text-decoration none
.destinatario
	color gris_oscuro
	display block
	float left
	font-weight bold
	text-align justify

.date
	color gris_medio !important
	margin 0 !important
	padding 0 !important
	float right

			
			


input[type=text]
input[type=email]
input[type=password]
	border: 1px solid #919090;
	border-radius: 4px;
	box-sizing: border-box;
	color: #676767;
	font-size: 15px;
	height: 30px;
	line-height: 8px;
	margin 0 0 2% 2%
	outline: 0px none;
	padding: 0px 13px;
	width 96%

textarea
	width 92%
	margin 0 2%


input[type=number]
select{
	background white;
	border: 1px solid #E1E1E1;
	border-radius: 4px;
	box-sizing: border-box;
	color: #676767;
	font-size: 16px;
	height: 28px;
	line-height: 30px;
	margin 0 0 2% 2%
	outline: 0px none;
	padding: 4px	
    width 96%
    -webkit-border-radius:4px;
    -moz-border-radius:4px;
    border-radius:4px;
    -webkit-box-shadow: 0 2px 0 #ccc, 0 -1px #fff inset;
    -moz-box-shadow: 0 2px 0 #ccc, 0 -1px #fff inset;
    box-shadow: 0 2px 0 #ccc, 0 -1px #fff inset;
    background: #f8f8f8;
    
    outline:none;
    display: inline-block;
    -webkit-appearance:none;
    -moz-appearance:none;
    appearance:none;
    cursor:pointer;
}

input[type=file]
	color: #676767;
	font-size: 10px;
	height: 30px;
	margin 0 0 0 2%
	width 96%

input[type=submit]
input[type=button]
	background: none repeat scroll 0% 0% amarillo;
	border-radius 5px
	border-width: medium medium 4px;
	border-style: none none solid;
	border-color: -moz-use-text-color -moz-use-text-color #F39C12;
	-moz-border-top-colors: none;
	-moz-border-right-colors: none;
	-moz-border-bottom-colors: none;
	-moz-border-left-colors: none;
	border-image: none;
	box-sizing: border-box;
	color: #B26500;
	display: inline-block;
	font-size: 16px;
	font-style: normal !important;
	font-weight: 500 !important;
	height: 35px;
	line-height: 15px;
	margin 10px 0 10px 5px
	min-width 100px
	padding: 4px !important;
	text-align: center;
	outline: 0px none;
	max-width 250px
	&:hover
		background #F39C12
		color blanco
		border-color: -moz-use-text-color -moz-use-text-color naranja;


.field_container
	margin-top 0px

.modulos
	&:before
		color menu
		content "\e601"
		display block
		font-family 'icomoon'
		font-size 75px
		font-weight normal
		margin 0
		opacity .3
		padding 0
		text-align center

